---
import { Icon } from 'astro-icon/components';

const {
    href,
    link,
    title,
    icon,
    icon_dark,
    additionalClass = '',
    marginLeft = '0.25rem',
    marginRight = '0',
    color,
} = Astro.props;
---

<a
    href={href || link}
    rel={href && 'me'}
    target={href && '_blank'}
    title={title}
    data-bs-toggle="tooltip"
    data-bs-placement="bottom"
    data-bs-delay="500"
    class={'text-decoration-none ' + additionalClass}
>
    <Icon name={icon} class={icon_dark && 'hide-dark'} color={color} width="16px" height="16px" />
    {icon_dark && <Icon name={icon_dark} color="white" class="hide-light" width="16px" height="16px" />}
</a>

<style lang="scss" define:vars={{ marginLeft, marginRight }}>
    @import '@styles/_variables.scss';
    a {
        margin-left: var(--marginLeft);
        margin-right: var(--marginRight);
        color: $body-color;
    }

    a.monochrome {
        svg {
            filter: brightness(0) opacity(0.7);
            transition: filter 0.1s ease-in-out;
        }
        &:hover,
        &:focus,
        &:active {
            svg {
                filter: brightness(0) opacity(1);
            }
        }
    }
    :global([data-bs-theme='dark']) {
        a.monochrome {
            svg {
                filter: brightness(0) invert(1) opacity(0.7);
            }
            &:hover,
            &:focus,
            &:active {
                svg {
                    filter: brightness(0) invert(1) opacity(1);
                }
            }
        }
    }
</style>
