{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@public/*": ["public/*"],
            "@styles/*": ["src/styles/*"],
            "@root/*": ["../../*"],
            "@utils/*": ["utils/*"]
        },
        "strictNullChecks": true
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
