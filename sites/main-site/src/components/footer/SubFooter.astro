---
const { md_github_url } = Astro.props;
---

<footer class="subfooter bg-body-tertiary py-3">
    <div class="container text-center">
        {
            md_github_url && (
                <p class="mb-0">
                    <a class="" href={md_github_url}>
                        <i class="fab fa-github me-2" />
                        See the source code for this page
                    </a>
                </p>
            )
        }
        <slot />
    </div>
</footer>
