{
    "name": "nf-co.re",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "build-cache": "npm run build-pipeline-json && npm run build-component-json",
        "build": "NODE_OPTIONS='--max-old-space-size=4096' astro build",
        "build-pipeline-json": "node bin/pipelines.json.js",
        "build-component-json": "node bin/components.json.js",
        "update": "for dir in sites/*; do (cd $dir && npx npm-check-updates --interactive --format group); done",
        "test-all": "for dir in sites/*; do (cd $dir && npm run test); done"
    },
    "workspaces": [
        "sites/*"
    ],
    "dependencies": {
        "@iconify-json/vscode-icons": "^1.2.22",
        "hast": "^1.0.0",
        "hast-util-to-html": "^9.0.5",
        "hastscript": "^9.0.1",
        "remark": "^15.0.1",
        "unist-util-visit": "^5.0.0"
    }
}
